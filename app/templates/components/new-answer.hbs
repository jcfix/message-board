{{#if addNewAnswer}}
  <h5 class="form-header">Add Answer</h5>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="author">Userame</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="response">Your Answer</label>
          {{input value=response id="response" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn adminBtn"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn adminBtn"{{action 'answerFormShow'}}>New Answer</button>
{{/if}}
