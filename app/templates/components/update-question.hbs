{{#if updateQuestionForm}}
  <h5 class="edit-header">Edit Form</h5>
    <div class="container">
      <form id="editQuestion">

        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question.question id="question" class="form-control" placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="author">Username</label>
          {{input value=question.author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="message">Add further details</label>
          {{input value=question.message id="message" class="form-control"}}
        </div>

        <button class="waves-effect waves-light btn adminBtn"{{action 'update' question}}>UPDATE</button>
      </form>
    </div>
{{else}}
    <button id="updateBtn" class="waves-effect waves-light btn adminBtn"{{action 'updateQuestionForm'}}>Edit</button>
{{/if}}
