{{#if addNewQuestion}}
  <h3>New Question</h3>
    <div class="container">
      <form id="addNewQuestion">
        <div class="form-group">
          <label for="book">Book</label>
          {{input value=book id="book" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="message">Elaborate on your Question</label>
          {{input value=message id="message" class="form-control"}}
        </div>

        <button class="waves-effect waves-light btn saveNewQuestion"{{action 'save1'}}>POST</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-light btn newQuestionForm"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
