{{#if addNewQuestion}}
  <h5 class="form-header">Add Question</h5>
    <div class="container">
      <form id="addNewQuestion">

        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="author">Username</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="message">Further details</label>
          {{input value=message id="message" class="form-control"}}
        </div>

        <button class="waves-effect waves-light btn adminBtn"{{action 'save1'}}>POST</button>
      </form>
    </div>
{{else}}
    <button id="newQuestionBtn" class="waves-effect waves-light btn adminBtn"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
